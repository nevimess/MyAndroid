<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.michalliberausr.myapplication.MainActivity">

    <TextView
        android:text="Imie:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nazwa"
        android:layout_marginTop="23dp"
        android:id="@+id/imie_wynik"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nazwa"
        tools:text="javastart.pl"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/przycisk"
        android:layout_below="@+id/ocena_wynik"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ocena_wynik"
        android:layout_below="@+id/input"
        android:layout_alignParentStart="true"
        android:layout_marginTop="114dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiogroup"
        android:layout_below="@+id/input"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="Mezczyzna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:textColor="@android:color/background_light"
            android:checked="false"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/radioGroup3"
            android:layout_marginBottom="26dp"
            android:layout_weight="1" />

        <RadioButton
            android:text="Kobieta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_below="@+id/input"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />
    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/input"
        android:textColor="?attr/colorBackgroundFloating"
        android:layout_below="@+id/imie_wynik"
        android:layout_alignParentStart="true" />


</RelativeLayout>
